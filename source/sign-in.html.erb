---
title: Sign in
use_layout: primary
versions: error
body: sign-in
---

<div class="box--form">
	<hgroup class="box__header">
		<h1>Sign in</h1>
		<h4>Log in to your account</h4>
	</hgroup>
	<div class="box__content">
		<button class="btn-facebook">
			Login with Facebook
		</button>
		<button class="btn-twitter">
			Login with Twitter
		</button>
		<div class="separator">or log in with</div>
		<form action="_error">
			<div class="form-group">
				<input type="email" class="required <%= version('error','success') %>"
				 name="email" placeholder="Your email address" value="<%= version('error','javier.artero@marsbased.com') %>">
			</div>
			<div class="form-group">
				<input type="password" class="required <%= version('error','warning') %>"
				 name="password" placeholder="Your password" >
				<% if version('error') %>
				<div class="info-field">Wrong password.</div>
				<% end %>
			</div>
			<p class="centered">
				<button class="btn-primary" type="submit">
					Log In
				</button>
			</p>
			<p class="centered">
				<a href="/reset-password/">
					I forgot my password
				</a>
			</p>
		</form>
	</div>
	<div class="box__footer centered">
		<a class="btn-primary-light btn-wide" href="/sign-up/">
			Create an account
		</a>
	</div>
</div>

