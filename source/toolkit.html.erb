---
title: Toolkit
css: toolkit
---
<div class="toolkit__container">
  <div class="toolkit__row">
    <div class="toolkit__item">
      <h1 data-icon="P">Colors</h1>
      <div class="card-css__container">
      <% for i in 1..8 %>
        <div class="card-css--colors-list">
          <div class="card-css__content">
            <div class="card-css__block"></div>
            <div class="card-css__text"></div>
          </div>
        </div>
      <% end %>
      </div>
    </div>
    <div class="toolkit__item">
      <h1>Buttons</h1>
      <div class="row">
        <div class="col-xs-4">
          <h2>Normal</h2>
          <p><button class="btn-primary">Primary Button</button></p>
          <p><button class="btn-primary--lighter">Primary Button</button></p>
          <p><button class="btn-secundary">Primary Button</button></p>
          <p><button class="btn-secundary--lighter">Primary Button</button></p>
        </div>
        <div class="col-xs-4">
          <h2>Hover/Active</h2>
          <p><button class="active btn-primary">Primary Button</button></p>
          <p><button class="active btn-primary--lighter">Primary Button</button></p>
          <p><button class="active btn-secundary">Primary Button</button></p>
          <p><button class="active btn-secundary--lighter">Primary Button</button></p>
        </div>
        <div class="col-xs-4">
          <h2>Disabled</h2>
          <p><button disabled class="btn-primary">Primary Button</button></p>
          <p><button disabled class="btn-primary--lighter">Primary Button</button></p>
          <p><button class="disabled btn-secundary">Primary Button</button></p>
          <p><button class="disabled btn-secundary--lighter">Primary Button</button></p>
        </div>
      </div>
    </div>
  </div>
  <div class="toolkit__row">
    <div class="toolkit__item">
      <h1>Typography</h1>
      <div class="row">
        <div class="card-css--typography">
          <div class="card-css__content">
            <div class="card-css__block">Aa</div>
            <div class="card-css__text">
              <div class="card-css__title">Karla</div>
              <div class="card-css__subtitle">Google Font</div>
            </div>
          </div>
        </div>
        <div class="typography__container">
          <p class="typography__h1">
            <span class="typography__title">h1, 24px</span>
            Tousled food truck polaroid
          </p>
          <p class="typography__h2">
            <span class="typography__title">h2, 16px</span>
            Tousled food truck polaroid
          </p>
          <p class="typography__base">
            <span class="typography__title">Text, inputs, links, 14px</span>
            Tousled food truck polaroid
          </p>
          <p class="typography__small">
            <span class="typography__title">Text, inputs, links, 14px</span>
            Tousled food truck polaroid
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="toolkit__container">
  <h1>Forms</h1>
  <div class="box">
    <div class="row">
      <div class="col-sm-6">
        <h2>Checkboxes</h2>
        <div class="toolkit__table">
          <div class="toolkit__cell">
          <input type="checkbox" name="checkgroup" id="check1" value="check1">
          <label for="check1">Checkbox OFF</label>
          </div>
          <div class="toolkit__cell">
          <input type="checkbox" name="checkgroup" id="check2" value="check2" checked>
          <label for="check2">Checkbox ON</label>
          </div>
          <div class="toolkit__cell">
          <input type="checkbox" name="checkgroup" id="check3" value="check3"
           disabled checked>
          <label for="check3">Checkbox Disabled</label>
          </div>
        </div>
        <div class="toolkit__table">
          <div class="toolkit__cell">
          <input type="radio" name="radiogroup" id="radio1" value="radio1">
          <label for="radio1">Radio OFF</label>
          </div>
          <div class="toolkit__cell">
          <input type="radio" name="radiogroup" id="radio2" value="radio2" checked>
          <label for="radio2">Radio ON</label>
          </div>
          <div class="toolkit__cell">
          <input type="radio" name="radiogroup2" id="radio3" value="radio3" checked disabled>
          <label for="radio3">Radio Disabled</label>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

